<div class="container">

    <h4>Color Presets</h4>
    <div class="dropdown">
        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown"
            aria-haspopup="true" aria-expanded="false">
            Presets
        </button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <a class="dropdown-item" href="#" name="defaultScheme" {{action "applyColorScheme" "default"}}>Default Color
                Scheme</a>
            <a class="dropdown-item" href="#" name="impairedScheme" {{action "applyColorScheme" "impaired"}}>Vision
                Impairment Color Scheme</a>
        </div>
    </div>

    <h4 class="mt-5">Landscape</h4>

    <div class="row">
        {{#each-in configuration.landscapeColors as |key color|}}
        <div class="col-md-6 col-lg-4 col-xl-3 mt-3">
            <div>{{format-property key}}</div>
            <div id="{{concat "cp-landscape-" key}}" class="input-group">
                {{input type="text" class="form-control input-lg" value=color }}
                <span class="input-group-append">
                    <span class="input-group-text colorpicker-input-addon"><i></i></span>
                </span>
            </div>
        </div>
        {{/each-in}}
    </div>

    <h4 class="mt-5">Application</h4>

    <div class="row">
        {{#each-in configuration.applicationColors as |key color|}}
        <div class="col-md-6 col-lg-4 col-xl-3 mt-3">
            <div>{{format-property key}}</div>
            <div id="{{concat "cp-application-" key}}" class="input-group">
                {{input type="text" class="form-control input-lg" value=color }}
                <span class="input-group-append">
                    <span class="input-group-text colorpicker-input-addon"><i></i></span>
                </span>
            </div>
        </div>
        {{/each-in}}
    </div>

</div>